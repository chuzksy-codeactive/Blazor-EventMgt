@page  "/login"
@inherits SignInBase

<div class="signin-header row justify-content-center">
    <div class="col-sm-5">
        <h3>Sign in to Event Manager</h3>
        <div class="signin-form">
            <EditForm Model="@_user" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label for="username">Username or email address</label>
                    <InputText class="form-control" @bind-Value="_user.Username" />
                    <ValidationMessage For="@(() => _user.Username)" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <InputText type="password" class="form-control" @bind-Value="_user.Password" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <ValidationMessage For="@(() => _user.Password)" />
            </EditForm>
        </div>
    </div>
</div>